<!DOCTYPE html>
<html lang="en">
<!-- include the head from head.ejs file -->
<%- include('includes/head', {title: 'CommunityVoice/Report'}) %>

<style>
    /* this media query uses for aliging the form in the center of the page in mobile device */
    @media only screen and (max-width: 600px) {
        .report-form form input, form textarea {
            width: 80% !important;
            margin: auto !important;
        }

        .navbar {
            padding: 0px 10px !important;
        }

        .navbar a {
            font-size: 13px !important;
        }

        footer {
            padding: 20px 50px !important;
        }

        footer div.contact {
            width: 100% !important;
            padding: 10px !important;
        }

        footer div.report {
            width: 100% !important;
            padding: 10px !important;
        }
    }

    /* this media query uses for aliging the form in the center of the page in tablet or bigger than mobile */
    @media only screen and (max-width: 1000px) {
        .report-form form input, form textarea {
            width: 80% !important;
            margin: auto !important;
        }
    }
</style>

<body>
    <!-- navigation -->
    <%- include('includes/navigation') %>

    <div class="image-container">
        <img src="images/main-img.jpg" width="100%" height="400px">
    </div>

    <div class="report-form">
        <p>Record a Report</p>
        <form action="/track" method="POST">
            <input type="text" placeholder="Name" id="name" name="name" required> <br>
            <input type="email" placeholder="Email" id="email" name="email" required> <br>
            <input type="text" placeholder="Catagory" id="category" name="category" required> <br>
            <input type="text" placeholder="Report Address" id="address" name="address" required> <br>
            <textarea name="details" id="details" placeholder="Write details in here..." rows="6" cols="4"></textarea> <br>
            <input type="submit" value="SUBMIT">
        </form>
    </div>

    <!-- include footer -->
    <%- include('includes/footer') %>

</body>

</html>
